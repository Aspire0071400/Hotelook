<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HotelBookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/price_booking_bar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F4C3">


            <ImageView
                android:id="@+id/booking_hotel_image"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/curved_edge_background"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialToolbar_booking"
                app:srcCompat="@drawable/ic_launcher_background" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar_booking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbar_background"
                android:backgroundTint="@color/black"
                android:elevation="20dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Hotel Booking"
                app:titleTextColor="@color/white" />

            <TextView
                android:id="@+id/booking_hotel_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/curved_edge_background"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:maxHeight="10dp"
                android:maxLines="10"
                android:padding="12dp"
                android:text="gjnawnj  rrojgoirejgoirjg rjgoikj ojiewj iej tiewj ij ijweo jweo jr gpoi goi gohrg hg hgh iehg ihre kgjo greg rghr goiuhrghog jerfoi rjgj rgrg jerjg rjgwroirjg jrigorjg orgjgnwongprwnvwnvno en e oefef nefn enf enf nenfowenf nnnwenfwenfwenfienfoenofi nfnef ef nf wefenfoenfonddnvjndvjnpodnondkncd;nfpaoewn  nnjfnwfnewnf owenfonweofn ewof nowe fnoe  fewfne wf newo fn"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:text="Description:"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/booking_hotel_image" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:text="Location/Address:"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/booking_hotel_description"
                app:layout_constraintStart_toStartOf="@+id/booking_hotel_description"
                app:layout_constraintTop_toBottomOf="@+id/booking_hotel_description" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/curved_edge_background"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:maxHeight="10dp"
                android:maxLines="3"
                android:padding="12dp"
                android:text="NEW Delhi jamia nagar dummy addressss, new dummy address india at dummy location."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Toolbar
        android:id="@+id/price_booking_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8A65"
        android:title="Price : 4534"
        android:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        android:titleTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/booking_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:text="Book Now"
        android:textColor="@color/white"
        android:background="@drawable/curved_edge_background"
        android:backgroundTint="#000000"
        android:elevation="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/price_booking_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/price_booking_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>